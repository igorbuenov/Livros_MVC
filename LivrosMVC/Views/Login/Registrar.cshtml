@using LivrosMVC.DTO.Usuario
@model UsuarioCadastroDTO

@{
    Layout = "_LayoutDeslogada";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}

@* Erros aparecem em uma lista *@
<div asp-validation-summary="All" class="text-danger"></div>

<div class="container">

    <h1>Cadastro de Usuários</h1>

    <form method="post" asp-action="Registrar" asp-controller="Login">

        <div class="mb-3">
            <label for="nome" class="form-label">Nome: </label>
            <input type="text" class="form-control" id="nome" asp-for="Nome">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>

        <div class="mb-3">
            <label for="sobrenome" class="form-label">Sobrenome: </label>
            <input type="text" class="form-control" id="sobrenome" asp-for="Sobrenome">
            <span class="text-danger" asp-validation-for="Sobrenome"></span>
        </div>

        <div class="mb-3">
            <label for="email" class="form-label">Email: </label>
            <input type="email" class="form-control" id="email" asp-for="Email">
            <span class="text-danger" asp-validation-for="Email"></span>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Senha: </label>
            <input type="password" class="form-control" id="password" asp-for="Senha">
            <span class="text-danger" asp-validation-for="Senha"></span>
        </div>

        <div class="mb-3">
            <label for="password" class="form-label">Confirma Senha: </label>
            <input type="password" class="form-control" id="password" asp-for="ConfirmaSenha">
            <span class="text-danger" asp-validation-for="ConfirmaSenha"></span>
        </div>

        <div class="d-flex justify-content-center">
            <button type="submit" class="btn btn-primary w-25 mx-2">Cadastrar</button>
            <a asp-action="Login" asp-controller="Login" class="btn w-25">Voltar</a>
        </div>

    </form>
</div>