@model EmprestimosModel

@{
    ViewData["Title"] = "Cadastrar Empréstimo";
}

@if (TempData["MensagemSucesso"] != null)
{
    <div class="alert alert alert-success text-light" role="alert">
        @TempData["MensagemSucesso"]
    </div>
}

@if (TempData["MensagemErro"] != null)
{
    <div class="alert alert alert-danger text-light" role="alert">
        @TempData["MensagemErro"]
    </div>
}


<div class="container bg-dark p-5 rounded-5">

    <div class="mb-5 text-center">
        <h1 class="text-light">Cadastro de Empréstimos</h1>
    </div>
    

    <form method="post" asp-controller="Emprestimo" asp-action="Cadastrar">

        <div class="mb-3">
            <label for="recebedor" class="form-label text-light">Recebedor:</label>
            <input type="text" class="form-control text-light" asp-for="Recebedor" id="recebedor" placeholder="Quem está recebendo o livro?">
            <span class="text-danger" asp-validation-for="Recebedor"></span>
        </div>

        <div class="mb-3">
            <label for="fornecedor" class="form-label text-light">Fornecedor:</label>
            <input type="text" class="form-control text-light" asp-for="Fornecedor" id="fornecedor" placeholder="Quem está emprestando o livro?">
            <span class="text-danger" asp-validation-for="Fornecedor"></span>
        </div>

        <div class="mb-3">
            <label for="livro" class="form-label text-light">Livro:</label>
            <input type="text" class="form-control text-light" asp-for="LivroEmprestado" id="livro" placeholder="Qual é o livro que está sendo emprestado?">
            <span class="text-danger" asp-validation-for="LivroEmprestado"></span>
        </div>

        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn btn-success w-50">Adicionar</button>
            <a class="btn btn-primary w-50" asp-controller="Emprestimo" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>



